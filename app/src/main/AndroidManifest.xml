<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adrienneeror.snowcanyonpocketguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AboutActivity"
            android:label="@string/about_section"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.Support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".GuidelinesActivity"
            android:label="@string/guidelines_section"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="andrid.Support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".HikingActivity"
            android:label="@string/hikes_section"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.Support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".FloraActivity"
            android:label="@string/flora_section"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.Support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>

        </activity>
    </application>

</manifest>